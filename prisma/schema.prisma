/**
 * CUSTOM ORDER
 */
enum CustomOrderType {
  MUG
  GELAS
  PIRING
  MANGKOK
  LAINNYA
}

enum CustomOrderStatus {
  NEW
  CONTACTED
  IN_PROGRESS
  DONE
  CANCELLED
}

model CustomOrder {
  id String @id @default(cuid())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  customerName String
  email        String
  phone        String

  orderName   String
  orderType   CustomOrderType
  description String          @db.Text

  image  String?
  status CustomOrderStatus @default(NEW)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([status])
  @@map("customorder")
}

/**
 * ORDER + MIDTRANS PAYMENT + SHIPPING ADDRESS
 */

// Status pembayaran (midtrans)
enum OrderPaymentStatus {
  PENDING
  PAID
  FAILED
  EXPIRED
  CANCELLED
}

// Status pengiriman (e-commerce)
enum ShippingStatus {
  PENDING
  PACKED
  SHIPPED
  DELIVERED
}

model Order {
  id String @id @default(cuid())

  // dipakai sebagai order_id di Midtrans
  orderCode String @unique

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  paymentStatus  OrderPaymentStatus @default(PENDING)
  shippingStatus ShippingStatus     @default(PENDING)

  grossAmount Int

  // SHIPPING ADDRESS (optional biar db push aman)
  recipientName  String?
  recipientPhone String?
  addressLine    String?
  city           String?
  province       String?
  postalCode     String?

  items   OrderItem[]
  payment OrderPayment?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // index untuk history & insight
  @@index([userId])
  @@index([createdAt])
  @@index([paymentStatus])
  @@index([shippingStatus])
  @@map("order")
}

model OrderItem {
  id String @id @default(cuid())

  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  produkId String @map("roomId")
  produk   Produk @relation(fields: [produkId], references: [id], onDelete: Cascade)

  quantity Int @default(1)

  // snapshot saat order dibuat
  price Int
  name  String
  image String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([orderId])
  @@index([produkId])
  @@map("orderitem")
}

